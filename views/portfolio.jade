extends layout
block title
  title R/M - Portfolio
block content
  link(rel='stylesheet', href='stylesheets/portfolio.css')
  div.content
    - if (typeof(results2)!=='undefined'){
      ul
        div#portfolioContainer.scene_element.scene_element--fadeinright
          each item in results2
            li
              img(src='images/portfolio/#{item.image_path}')
              div.info
                span
                  .itemTitle #{item.title}
                  p #{item.description}
                  a(class='button', href='/portfolio/#{item.title}') See more
              div.curtain
    -}
    - if (typeof(results3)!=='undefined'){
      div.projectContainer
        div.projectTitle #{results3[0].title}
        div.projectDescription #{results3[0].long_description}
      div.projectShowcase.scene_element.scene_element--fadeinright
        - if (results3[0].showcase_image!==''){
          each img in images
            img.lazy(class='popup' href='images/portfolio/#{img}' data-original='images/portfolio/#{img}')
        -}
    -}
div.footer
  div.container
    div.navigation
      ul
        li 
          a(href='/') Home
          div.border-bot
        li 
          a(href='/portfolio') Portfolio
          div.border-bot
        li 
          a(href='/resume') Resume
          div.border-bot
        li 
          a(href='/contact') Contact me
